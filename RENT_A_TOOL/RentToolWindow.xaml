<Window x:Class="RENT_A_TOOL.RentToolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RENT_A_TOOL"
        mc:Ignorable="d"
        Title="RentToolWindow" Height="350" Width="300">
    <Grid>
        <TextBlock x:Name="ToolNameText" FontWeight="Bold" FontSize="16" Margin="10,10,10,0"/>

        <TextBlock Text="Wybierz datę wypożyczenia:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,60,10,0"/>
        <DatePicker x:Name="RentDatePicker" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="150,60,10,0"/>

        <TextBlock Text="Wybierz datę zwrotu:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,100,10,0"/>
        <DatePicker x:Name="ReturnDatePicker" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="150,100,10,0"/>

        <Button Content="Potwierdź wypożyczenie" Width="150" Height="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="ConfirmRent_Click"/>
    </Grid>
</Window>
