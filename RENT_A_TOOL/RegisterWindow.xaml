<Window x:Class="RENT_A_TOOL.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RENT_A_TOOL"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Imię:"/>
        <TextBox Grid.Row="1" x:Name="ImieTextBox" Margin="5,0,5,20"/>

        <TextBlock Grid.Row="2" Text="Nazwisko:"/>
        <TextBox Grid.Row="3" x:Name="NazwiskoTextBox" Margin="5,0,5,20"/>

        <TextBlock Grid.Row="4" Text="Email:"/>
        <TextBox Grid.Row="5" x:Name="EmailTextBox" Margin="5,0,5,20"/>

        <TextBlock Grid.Row="6" Text="Hasło:"/>
        <PasswordBox Grid.Row="7" x:Name="HasloPasswordBox" Margin="5,0,5,20"/>
        
        <Grid Grid.Row="8"></Grid>
        
        <Button  Grid.Row="9" Content="Zarejestruj" Click="RegisterButton_Click" Padding="15" Margin="5,0,5,20"/>
    </Grid>
</Window>
