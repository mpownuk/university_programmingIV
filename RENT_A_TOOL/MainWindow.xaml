<Window x:Class="RENT_A_TOOL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RENT_A_TOOL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,-59,-50">
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\Laptop\Desktop\STUDIA\SEMESTR 4\PROGRAMOWANIE IV\RENT_A_TOOL\RENT_A_TOOL\Pictures\header-photo4.jpg" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Rent-a-Tool" 
               FontSize="70" FontStyle="Normal" FontFamily="Agency FB"
               Foreground="Blue" FontWeight="Bold"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
               Padding="10,5" RenderTransformOrigin="0.503,1.315" />

        <Button Content="Zaloguj się" FontFamily="Agency FB"
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                FontSize="30" Padding="50,20" Click="Login_Click" 
                Grid.Row="3" Grid.Column="0"
                Background="Blue" Foreground="White"
                BorderBrush="White" BorderThickness="0"/>

        <Button Content="Zarejestruj się" FontFamily="Agency FB"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                FontSize="30" Padding="50,20" Click="Register_Click" 
                Grid.Row="3" Grid.Column="1"
                Background="Green" Foreground="White"
                BorderBrush="White" BorderThickness="0"/>
    </Grid>
</Window>
